@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    body {
        position: relative;
        color: #fff;
    }

    /* Gym background image full screen */
    .bg-gym {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('https://images.pexels.com/photos/1954524/pexels-photo-1954524.jpeg');
        background-size: cover;
        background-position: center;
        filter: brightness(0.4); /* dark overlay */
        z-index: -1;
    }

    .register-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding-top: 150px; /* space for navbar */
        padding-bottom: 40px; /* space for footer */
    }

    .register-card {
        width: 100%;
        max-width: 450px;
        background: rgba(255,255,255,0.95);
        border-radius: 15px;
        padding: 35px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.5);
        color: #000;
    }

        .register-card h2 {
            text-align: center;
            font-weight: 700;
            margin-bottom: 25px;
            color: #333;
        }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ccc;
        padding: 10px 14px;
    }

        .form-control:focus {
            box-shadow: 0 0 6px rgba(143, 211, 244, 0.9);
            border-color: rgba(143, 211, 244, 0.9);
        }

    .btn-register {
        width: 100%;
        border: none;
        border-radius: 10px;
        background: linear-gradient(to right, #84fab0, #8fd3f4);
        font-weight: bold;
        color: #000;
        padding: 10px;
        transition: all 0.3s ease;
    }

        .btn-register:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #8fd3f4, #84fab0);
            color: #fff;
        }

    .text-muted a {
        color: #007bff;
        font-weight: 600;
    }

        .text-muted a:hover {
            text-decoration: underline;
        }

    footer {
        background-color: rgba(0,0,0,0.8);
        color: #fff;
        text-align: center;
        padding: 15px 0;
    }
</style>

<!-- Background Image -->
<div class="bg-gym"></div>

<div class="register-container">
    <div class="register-card">
        <h2>Create Account</h2>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" required />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" required />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email Address" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn-register">Register</button>

            <p class="text-center text-muted mt-4">
                Already have an account? <a asp-page="./Login">Login here</a>
            </p>
        </form>
    </div>
</div>
 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}
